---
import GenericButton from "../input/button/GenericButton.astro";
import SearchBar from "../search/SearchBar.astro";
import SwitchTheme from "../input/button/SwitchTheme.astro";
---

<section class="left">
  <a href="#"><img class="theme-light" src="/img/typsilogo-black.svg" alt="" /><img class="theme-dark" src="/img/typsilogo-white.svg" alt="" /></a>
  <SearchBar></SearchBar>
</section>
<section class="right">
  <SwitchTheme></SwitchTheme>
  <GenericButton class="login">Log in</GenericButton>
  <GenericButton class="signup">Sign up</GenericButton>
</section>

<style lang="scss">
  .left {
    height: 100%;
    display: flex;
    gap: 24px;
    align-items: center;
    min-width: 0;
  }
  .right {
    height: 100%;
    display: flex;
    gap: 14px;
    align-items: center;
  }
  a {
    height: 100%;
  }
  img {
    display: block;
    height: 100%;
    width: auto;
  }
  .right button {
    font-size: 1.3em;
  }

  .login {
    background-color: var(--color-003);
    color: var(--color-text);
  }

  body:not(.theme-dark) .theme-dark {
    display: none;
  }

  :root:has(body.theme-dark) .theme-light {
    display: none;
  }
</style>